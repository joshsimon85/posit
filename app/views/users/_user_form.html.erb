<div class="well">
  <%= render 'shared/form_errors', obj: user %>
  <%= form_for user do |f| %>
    <div class="control_group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control_group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success' %>
  <% end %>
</div>
