<div class="well">
  <%= render 'shared/form_errors', obj: user %>
  <%= form_for user do |f| %>
    <div class="control_group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control_group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control_group">
      <%= f.label :phone, 'Phone Number <small>(numbers only)</small>'.html_safe %>
      <%= f.text_field :phone, maxlength: 9 %>
    </div>
    <div class="control_group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <%= f.submit user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-success' %>
  <% end %>
</div>
